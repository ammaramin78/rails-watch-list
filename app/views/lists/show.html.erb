<h1> List </h2>

<div>
  <h1><%= @list.name %></h1>
  <ul>
    <% @list.bookmarks.each do |b| %>
      <li><%= b.movie.title %></li>
      <li><%= link_to "Delete",
          list_bookmarks_path(b),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add new bookmark", new_list_bookmark_path(@list) %>
</div>


